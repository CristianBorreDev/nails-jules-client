---
import Layout from "../layouts/Layout.astro";
import Hero from "../components/sections/Hero.astro";
import Services from "../components/sections/Services.astro";
import Contact from "../components/sections/Contact.astro";

let services: Array<{
  id: number;
  name: string;
  description?: string;
  duration: number;
  price: number;
}> = [
  {
    id: 1,
    name: "Manicure Clásico",
    description:
      "Limpieza profunda, corte y lima, cutículas, hidratación y esmaltado tradicional.",
    duration: 45,
    price: 2800,
  },
  {
    id: 2,
    name: "Manicure con Gel",
    description:
      "Esmaltado semipermanente con acabado brillante y duradero hasta 3 semanas.",
    duration: 60,
    price: 3800,
  },
  {
    id: 3,
    name: "Pedicure Spa",
    description:
      "Tratamiento completo con exfoliación, masaje relajante y esmaltado profesional.",
    duration: 75,
    price: 4200,
  },
  {
    id: 4,
    name: "Kapping en Gel",
    description:
      "Refuerzo y extensión natural de tus uñas para mayor resistencia y durabilidad.",
    duration: 80,
    price: 4800,
  },
  {
    id: 5,
    name: "Uñas Acrílicas",
    description:
      "Extensión con acrílico para uñas largas y resistentes con diseño personalizado.",
    duration: 90,
    price: 5500,
  },
  {
    id: 6,
    name: "Nail Art Premium",
    description:
      "Diseños artísticos con strass, foils, encajes y técnicas exclusivas.",
    duration: 70,
    price: 4500,
  },
];

let schedules: {
  days?: string[];
  hours?: string[];
} = {
  days: ["Lunes", "Martes", "Miércoles", "Jueves", "Viernes"],
  hours: ["09:00", "10:30", "12:00", "14:30", "16:00", "17:30", "19:00"],
};
---

<Layout
  title="Inicio"
  description="Reserva tu cita de manicure y pedicure online. Servicios profesionales con los más altos estándares de calidad y cuidado."
>
  <!-- Hero Section -->
  <Hero
    title="Nails Jules"
    subtitle="Transformamos tus uñas con arte, precisión y dedicación. Experiencia premium en cada detalle."
    ctaText="Reservar mi cita"
  />

  <Services services={services} />

  <Contact services={services} schedules={schedules} />
</Layout>
