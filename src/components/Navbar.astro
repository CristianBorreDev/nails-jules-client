<header
  class="sticky top-0 z-50 bg-white/95 backdrop-blur-md border-b border-jules-primary/20 shadow-sm"
>
  <nav class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
    <div class="flex justify-between items-center py-4">
      {/* Logo */}
      <a href="/" class="flex items-center gap-3 group">
        <div
          class="w-10 h-10 rounded-full bg-linear-to-r from-jules-accent to-pink-400 flex items-center justify-center"
        >
          <span class="text-white font-bold text-lg">NJ</span>
        </div>
        <div class="text-2xl font-bold">
          <span
            class="text-jules-dark group-hover:text-jules-accent transition-colors"
            >Nails</span
          >
          <span
            class="text-jules-accent group-hover:text-jules-dark transition-colors"
            >Jules</span
          >
        </div>
      </a>

      {/* Navegación Desktop */}
      <div class="hidden md:flex items-center gap-8">
        <a
          href="#services"
          class="text-jules-dark/80 hover:text-jules-accent transition-colors font-medium relative after:absolute after:bottom-0 after:left-0 after:w-0 after:h-0.5 after:bg-jules-accent after:transition-all hover:after:w-full"
        >
          Servicios
        </a>
        <a
          href="#gallery"
          class="text-jules-dark/80 hover:text-jules-accent transition-colors font-medium relative after:absolute after:bottom-0 after:left-0 after:w-0 after:h-0.5 after:bg-jules-accent after:transition-all hover:after:w-full"
        >
          Galería
        </a>
        <a
          href="#testimonials"
          class="text-jules-dark/80 hover:text-jules-accent transition-colors font-medium relative after:absolute after:bottom-0 after:left-0 after:w-0 after:h-0.5 after:bg-jules-accent after:transition-all hover:after:w-full"
        >
          Opiniones
        </a>
        <a
          href="#appointment"
          class="btn-primary px-6 py-2.5 rounded-xl font-semibold hover:shadow-lg transition-all duration-300"
        >
          Reservar Cita
        </a>
      </div>

      {/* Botón Menú Mobile y Navegación Mobile */}
      <div class="md:hidden">
        <button
          id="menuToggle"
          class="text-jules-dark hover:text-jules-accent transition-colors p-2"
          aria-label="Toggle menu"
        >
          <svg
            class="w-6 h-6"
            fill="none"
            stroke="currentColor"
            viewBox="0 0 24 24"
          >
            <path
              stroke-linecap="round"
              stroke-linejoin="round"
              stroke-width="2"
              d="M4 6h16M4 12h16M4 18h16"></path>
          </svg>
        </button>

        {/* Menú Mobile (oculto por defecto) */}
        <div
          id="mobileMenu"
          class="absolute top-full left-0 right-0 bg-white border-t border-jules-primary/20 shadow-lg hidden"
        >
          <div class="flex flex-col p-4 space-y-4">
            <a
              href="#services"
              class="text-jules-dark/80 hover:text-jules-accent transition-colors font-medium py-2 px-4 rounded-lg hover:bg-jules-primary/30"
            >
              Servicios
            </a>
            <a
              href="#gallery"
              class="text-jules-dark/80 hover:text-jules-accent transition-colors font-medium py-2 px-4 rounded-lg hover:bg-jules-primary/30"
            >
              Galería
            </a>
            <a
              href="#testimonials"
              class="text-jules-dark/80 hover:text-jules-accent transition-colors font-medium py-2 px-4 rounded-lg hover:bg-jules-primary/30"
            >
              Opiniones
            </a>
            <a
              href="#appointment"
              class="btn-primary text-center py-2.5 px-4 rounded-lg font-semibold"
            >
              Reservar Cita
            </a>
          </div>
        </div>
      </div>
    </div>
  </nav>
</header>

<script>
  // Script para el menú móvil
  document.addEventListener("DOMContentLoaded", () => {
    const menuToggle = document.getElementById("menuToggle");
    const mobileMenu = document.getElementById("mobileMenu");

    menuToggle?.addEventListener("click", () => {
      mobileMenu?.classList.toggle("hidden");
    });

    // Cerrar menú al hacer clic en un enlace
    mobileMenu?.querySelectorAll("a").forEach((link) => {
      link.addEventListener("click", () => {
        mobileMenu.classList.add("hidden");
      });
    });

    // Cerrar menú al hacer clic fuera
    document.addEventListener("click", (event: any) => {
      if (
        !menuToggle?.contains(event.target) &&
        !mobileMenu?.contains(event.target)
      ) {
        mobileMenu?.classList.add("hidden");
      }
    });
  });
</script>

<style>
  /* Animación para el efecto hover de los enlaces */
  nav a::after {
    content: "";
    position: absolute;
    bottom: -2px;
    left: 0;
    width: 0;
    height: 2px;
    background: linear-linear(
      to right,
      var(--color-jules-accent),
      var(--color-jules-gold)
    );
    transition: width 0.3s ease;
  }

  nav a:hover::after {
    width: 100%;
  }
</style>
