---
interface Props {
  services: Array<{
    id: number;
    name: string;
    description?: string;
    duration: number;
    price: number;
    category?: string;
  }>;
  schedules?: {
    days?: string[];
    hours?: string[];
  };
}

const { services = [], schedules = {} } = Astro.props;

const days = schedules?.days || [
  "Lunes",
  "Martes",
  "Miércoles",
  "Jueves",
  "Viernes",
  "Sábado",
];
const hours = schedules?.hours || [
  "09:00",
  "10:30",
  "12:00",
  "15:00",
  "16:30",
  "18:00",
];
---

<section id="appointment" class="py-16 bg-jules scroll-mt-20">
  <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
    {/* Encabezado */}
    <div class="text-center mb-12">
      <h2 class="text-3xl md:text-4xl font-bold mb-4">
        <span class="text-jules-dark">Reserva tu cita</span>
        <span class="text-jules-accent block">en 3 simples pasos</span>
      </h2>
      <p class="text-lg text-jules-dark/60 max-w-2xl mx-auto">
        Rellena los datos, elige tu servicio y selecciona fecha y hora
      </p>
    </div>

    {/* Formulario horizontal en 3 columnas */}
    <div class="bg-white rounded-2xl shadow-lg overflow-hidden">
      {/* Encabezado de columnas */}
      <div class="grid grid-cols-3 border-b border-jules-primary/20">
        <div class="text-center py-4 border-r border-jules-primary/20">
          <div class="flex items-center justify-center gap-2">
            <div
              class="w-8 h-8 rounded-full bg-jules-accent text-white flex items-center justify-center font-bold text-sm"
            >
              1
            </div>
            <span class="font-semibold text-jules-dark text-sm">Tus datos</span>
          </div>
        </div>
        <div class="text-center py-4 border-r border-jules-primary/20">
          <div class="flex items-center justify-center gap-2">
            <div
              class="w-8 h-8 rounded-full bg-jules-accent text-white flex items-center justify-center font-bold text-sm"
            >
              2
            </div>
            <span class="font-semibold text-jules-dark text-sm">Servicio</span>
          </div>
        </div>
        <div class="text-center py-4">
          <div class="flex items-center justify-center gap-2">
            <div
              class="w-8 h-8 rounded-full bg-jules-accent text-white flex items-center justify-center font-bold text-sm"
            >
              3
            </div>
            <span class="font-semibold text-jules-dark text-sm"
              >Fecha y hora</span
            >
          </div>
        </div>
      </div>

      <div class="p-8">
        <form id="appointment-form">
          {/* Fila 1: Las 3 columnas principales */}
          <div class="grid md:grid-cols-3 gap-6">
            {/* Columna 1: Información personal */}
            <div class="space-y-5">
              <div>
                <label
                  for="clientName"
                  class="block text-sm font-medium text-jules-dark mb-2"
                >
                  Nombre completo *
                </label>
                <input
                  type="text"
                  id="clientName"
                  name="clientName"
                  required
                  class="w-full px-4 py-3 rounded-lg border border-jules-primary/30 focus:border-jules-accent focus:ring-2 focus:ring-jules-accent/20 outline-none transition"
                  placeholder="Tu nombre"
                />
              </div>

              <div>
                <label
                  for="phone"
                  class="block text-sm font-medium text-jules-dark mb-2"
                >
                  Teléfono *
                </label>
                <input
                  type="tel"
                  id="phone"
                  name="phone"
                  required
                  class="w-full px-4 py-3 rounded-lg border border-jules-primary/30 focus:border-jules-accent focus:ring-2 focus:ring-jules-accent/20 outline-none transition"
                  placeholder="+54 9 11 1234-5678"
                />
                <p class="text-xs text-jules-dark/50 mt-1">
                  Ej: +54 9 11 1234-5678
                </p>
              </div>

              <div>
                <label
                  for="email"
                  class="block text-sm font-medium text-jules-dark mb-2"
                >
                  Email (opcional)
                </label>
                <input
                  type="email"
                  id="email"
                  name="email"
                  class="w-full px-4 py-3 rounded-lg border border-jules-primary/30 focus:border-jules-accent focus:ring-2 focus:ring-jules-accent/20 outline-none transition"
                  placeholder="tu@email.com"
                />
              </div>
            </div>

            {/* Columna 2: Selección de servicio */}
            <div class="space-y-5">
              <div>
                <label
                  for="serviceId"
                  class="block text-sm font-medium text-jules-dark mb-2"
                >
                  Servicio *
                </label>
                {
                  services.length > 0 ? (
                    <select
                      id="serviceId"
                      name="serviceId"
                      required
                      class="w-full px-4 py-3 rounded-lg border border-jules-primary/30 focus:border-jules-accent focus:ring-2 focus:ring-jules-accent/20 outline-none transition bg-white"
                    >
                      <option value="" disabled selected>
                        Elige un servicio
                      </option>
                      {services.map((service) => (
                        <option value={service.id}>
                          {service.name} - ${service.price}
                        </option>
                      ))}
                    </select>
                  ) : (
                    <div class="text-center py-4">
                      <p class="text-jules-dark/60">Cargando servicios...</p>
                    </div>
                  )
                }
              </div>

              {/* Información del servicio seleccionado */}
              <div
                class="p-4 bg-jules-primary/30 rounded-lg border border-jules-primary/20"
              >
                <div class="flex items-center justify-between mb-2">
                  <span class="text-sm font-medium text-jules-dark"
                    >Duración:</span
                  >
                  <span
                    class="text-sm text-jules-accent font-medium"
                    id="service-duration">-</span
                  >
                </div>
                <div class="flex items-center justify-between">
                  <span class="text-sm font-medium text-jules-dark"
                    >Precio:</span
                  >
                  <span
                    class="text-lg font-bold text-jules-accent"
                    id="service-price">$ -</span
                  >
                </div>
              </div>

              <div>
                <label
                  for="notes"
                  class="block text-sm font-medium text-jules-dark mb-2"
                >
                  Notas adicionales
                </label>
                <textarea
                  id="notes"
                  name="notes"
                  rows="3"
                  class="w-full px-4 py-3 rounded-lg border border-jules-primary/30 focus:border-jules-accent focus:ring-2 focus:ring-jules-accent/20 outline-none transition resize-none"
                  placeholder="Alergias, preferencias, etc."></textarea>
              </div>
            </div>

            {/* Columna 3: Fecha y hora */}
            <div class="space-y-5">
              <div>
                <label
                  for="preferredDay"
                  class="block text-sm font-medium text-jules-dark mb-2"
                >
                  Día preferido *
                </label>
                <select
                  id="preferredDay"
                  name="preferredDay"
                  required
                  class="w-full px-4 py-3 rounded-lg border border-jules-primary/30 focus:border-jules-accent focus:ring-2 focus:ring-jules-accent/20 outline-none transition bg-white"
                >
                  <option value="" disabled selected>Selecciona un día</option>
                  {days.map((day) => <option value={day}>{day}</option>)}
                </select>
              </div>

              <div>
                <label
                  for="preferredTime"
                  class="block text-sm font-medium text-jules-dark mb-2"
                >
                  Hora preferida *
                </label>
                <select
                  id="preferredTime"
                  name="preferredTime"
                  required
                  class="w-full px-4 py-3 rounded-lg border border-jules-primary/30 focus:border-jules-accent focus:ring-2 focus:ring-jules-accent/20 outline-none transition bg-white"
                >
                  <option value="" disabled selected>Selecciona una hora</option
                  >
                  {hours.map((hour) => <option value={hour}>{hour}</option>)}
                </select>
              </div>

              <div>
                <label
                  for="preferredDate"
                  class="block text-sm font-medium text-jules-dark mb-2"
                >
                  Fecha específica (opcional)
                </label>
                <input
                  type="date"
                  id="preferredDate"
                  name="preferredDate"
                  class="w-full px-4 py-3 rounded-lg border border-jules-primary/30 focus:border-jules-accent focus:ring-2 focus:ring-jules-accent/20 outline-none transition"
                  min={new Date().toISOString().split("T")[0]}
                />
              </div>
            </div>
          </div>

          {/* Fila 2: Términos y botón */}
          <div class="pt-4 border-t border-jules-primary/20">
            <div
              class="flex flex-col md:flex-row items-start md:items-center justify-between gap-6"
            >
              {/* Términos y condiciones */}
              <div class="flex-1">
                <div class="flex items-start gap-3">
                  <input
                    type="checkbox"
                    id="terms"
                    name="terms"
                    required
                    class="mt-1 w-4 h-4 rounded border-jules-primary/30 text-jules-accent focus:ring-jules-accent/20"
                  />
                  <label for="terms" class="text-sm text-jules-dark/70">
                    Acepto los términos, condiciones y políticas de privacidad
                  </label>
                </div>
              </div>

              {/* Botón de envío */}
              <div class="w-full md:w-auto">
                <button
                  type="submit"
                  class="w-full bg-jules-accent hover:bg-jules-accent/90 text-white px-8 py-4 rounded-xl font-semibold text-lg transition-all duration-300 hover:shadow-lg"
                >
                  <span class="flex items-center justify-center gap-3">
                    <svg
                      class="w-5 h-5"
                      fill="none"
                      stroke="currentColor"
                      viewBox="0 0 24 24"
                    >
                      <path
                        stroke-linecap="round"
                        stroke-linejoin="round"
                        stroke-width="2"
                        d="M5 13l4 4L19 7"></path>
                    </svg>
                    Confirmar reserva
                  </span>
                </button>
              </div>
            </div>
          </div>
        </form>
      </div>
    </div>
  </div>
</section>
