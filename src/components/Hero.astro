            </div>
          </div>
        </div>

        <!-- Imagen Hero -->
        <div class="lg:w-1/2 relative">
          <div class="relative">
            <!-- Imagen principal -->
            <div
              class="aspect-square rounded-3xl overflow-hidden shadow-2xl bg-linear-to-br from-pink-100 to-jules-primary relative"
            >
              <div class="absolute inset-0 flex items-center justify-center">
                <div class="text-center p-8">
                  <div
                    class="w-20 h-20 md:w-32 md:h-32 rounded-full bg-jules-accent/20 flex items-center justify-center mx-auto mb-6"
                  >
                    <svg
                      class="w-12 h-12 md:w-20 md:h-20 text-jules-accent"
                      fill="currentColor"
                      viewBox="0 0 20 20"
                    >
                      <path
                        fill-rule="evenodd"
                        d="M10 18a8 8 0 100-16 8 8 0 000 16zm1-12a1 1 0 10-2 0v4a1 1 0 00.293.707l2.828 2.829a1 1 0 101.415-1.415L11 9.586V6z"
