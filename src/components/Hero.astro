          <h1 class="text-4xl md:text-5xl lg:text-6xl font-bold mb-6">
            <span class="text-jules-dark">{title.split(" ")[0]}</span>
            <span class="text-jules-accent block md:inline">
              {title.split(" ")[1]}</span
            >
          </h1>

          <p
            class="text-lg md:text-xl text-jules-dark/80 mb-8 leading-relaxed max-w-2xl mx-auto lg:mx-0"
          >
            {subtitle}
          </p>

          <div
            class="flex flex-col sm:flex-row gap-4 justify-center lg:justify-start"
          >
            <a
              href="#appointment"
              class="btn-primary inline-flex items-center justify-center gap-2 px-8 py-4 text-lg rounded-xl transition-all duration-300 hover:shadow-xl hover:-translate-y-1"
            >
              <svg
                class="w-5 h-5"
                fill="none"
                stroke="currentColor"
                viewBox="0 0 24 24"
              >
                <path
                  stroke-linecap="round"
                  stroke-linejoin="round"
                  stroke-width="2"
                  d="M12 8v4l3 3m6-3a9 9 0 11-18 0 9 9 0 0118 0z"></path>
              </svg>
              {ctaText}
            </a>

            <a
              href="#services"
              class="btn-secondary inline-flex items-center justify-center gap-2 px-8 py-4 text-lg rounded-xl transition-all duration-300"
            >
              <svg
                class="w-5 h-5"
                fill="none"
                stroke="currentColor"
                viewBox="0 0 24 24"
              >
                <path
                  stroke-linecap="round"
                  stroke-linejoin="round"
                  stroke-width="2"
                  d="M19 9l-7 7-7-7"></path>
              </svg>
              Ver Servicios
