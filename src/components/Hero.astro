  >
    <!-- Elementos decorativos -->
    <div
      class="absolute top-0 left-0 w-64 h-64 bg-jules-accent/10 rounded-full -translate-x-1/2 -translate-y-1/2"
    >
    </div>
    <div
      class="absolute bottom-0 right-0 w-96 h-96 bg-jules-gold/5 rounded-full translate-x-1/3 translate-y-1/3"
    >
    </div>

    <div
      class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-20 md:py-32 relative z-10"
    >
      <div class="flex flex-col lg:flex-row items-center gap-12 lg:gap-16">
        <!-- Contenido de texto -->
        <div class="lg:w-1/2 text-center lg:text-left">
          <div class="mb-6">
